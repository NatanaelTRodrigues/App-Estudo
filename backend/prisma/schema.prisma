// Prisma Schema - Banco de Dados do App de Estudos

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  name          String
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  goals         Goal[]
  questions     Question[]
  studySessions StudySession[]
  weeklyPlan    WeeklyPlan?
  monthlyReports MonthlyReport[]
  notifications  Notification[]
  
  @@map("users")
}

model Goal {
  id               String   @id @default(uuid())
  userId           String
  weekNumber       Int
  year             Int
  targetHours      Float
  currentHours     Float    @default(0)
  targetSubjects   Int
  currentSubjects  Int      @default(0)
  targetQuestions  Int
  currentQuestions Int      @default(0)
  startDate        DateTime
  endDate          DateTime
  progress         Float    @default(0)
  status           GoalStatus @default(ACTIVE)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, weekNumber, year])
  @@map("goals")
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  FAILED
}

model Question {
  id              String   @id @default(uuid())
  userId          String
  subject         String
  totalQuestions  Int
  correctAnswers  Int
  wrongAnswers    Int
  date            DateTime @default(now())
  weekNumber      Int
  year            Int
  accuracy        Float
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("questions")
}

model StudySession {
  id          String   @id @default(uuid())
  userId      String
  subject     String
  duration    Int      // em minutos
  date        DateTime @default(now())
  weekNumber  Int
  year        Int
  completed   Boolean  @default(false)
  notes       String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("study_sessions")
}

model WeeklyPlan {
  id        String   @id @default(uuid())
  userId    String   @unique
  monday    Json     // Array de { name, duration, completed }
  tuesday   Json
  wednesday Json
  thursday  Json
  friday    Json
  saturday  Json
  sunday    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("weekly_plans")
}

model MonthlyReport {
  id               String       @id @default(uuid())
  userId           String
  month            Int
  year             Int
  totalHours       Float
  totalQuestions   Int
  averageAccuracy  Float
  bestWeek         Int
  worstWeek        Int
  classification   Classification
  generatedAt      DateTime     @default(now())
  
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, month, year])
  @@map("monthly_reports")
}

enum Classification {
  RUIM
  REGULAR
  BOM
  OTIMO
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  type        NotificationType
  title       String
  message     String
  scheduledFor DateTime
  sent        Boolean          @default(false)
  sentAt      DateTime?
  createdAt   DateTime         @default(now())
  
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("notifications")
}

enum NotificationType {
  STUDY_REMINDER
  WEEKLY_GOAL
  EXAM
  REVIEW
  MONTHLY_REPORT
}
